@model API.ViewModel.SubjectViewModel
@{
    ViewData["Title"] = "Chi tiết môn học";
}

<div class="container mt-5">
    <div class="card border-0 shadow rounded-4">
        <div class="card-header bg-gradient bg-primary text-white py-3 rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-journal-text me-2"></i>Thông tin môn học</h3>
        </div>
        <div class="card-body p-4">
            <dl class="row mb-0">
                @if (User.IsInRole("Admin"))
                {
                    <dt class="col-sm-4 fw-semibold text-secondary">Mã:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>
                }

                <dt class="col-sm-4 fw-semibold text-secondary">Tên môn học:</dt>
                <dd class="col-sm-8">@Model.SubjectName</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Mã môn học:</dt>
                <dd class="col-sm-8">@Model.subjectCode</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Số tín chỉ:</dt>
                <dd class="col-sm-8">@Model.NumberOfCredits</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Kỳ:</dt>
                <dd class="col-sm-8">@Model.SemesterId</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Mô tả:</dt>
                <dd class="col-sm-8" style="white-space: pre-wrap;">@Model.Description</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Trạng thái:</dt>
                <dd class="col-sm-8">
                    @if (Model.Status == true)
                    {
                        <span class="badge bg-success px-3 py-2">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger px-3 py-2">Không hoạt động</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light border-top d-flex justify-content-between align-items-center rounded-bottom-4 px-4 py-3">
            <form asp-action="Lock" asp-controller="SubjectW" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-outline-warning btn-sm">
                    <i class="bi bi-shield-lock"></i>
                    @(Model.Status == true ? "Khóa môn học" : "Mở khóa")
                </button>
            </form>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm me-2">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
