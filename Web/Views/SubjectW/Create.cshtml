@model API.ViewModel.SubjectViewModel
@{
    ViewData["Title"] = "Tạo môn học mới";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-gradient bg-primary text-white py-4 rounded-top-4">
            <h4 class="mb-0">
                <i class="bi bi-journal-plus me-2"></i> Tạo môn học mới
            </h4>
        </div>
        <div class="card-body px-5 py-4">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="SubjectName" class="form-label fw-semibold">Tên môn học</label>
                        <input asp-for="SubjectName" class="form-control shadow-sm"/>
                        <span asp-validation-for="SubjectName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SubjectCode" class="form-label fw-semibold">Mã môn học</label>
                        <input asp-for="SubjectCode" class="form-control shadow-sm"/>
                        <span asp-validation-for="SubjectCode" class="text-danger small"></span>
                    </div>

                  @*   <div class="col-md-6">
                        <label asp-for="SemesterId" class="form-label fw-semibold">Kỳ học</label>
                        <select asp-for="SemesterId" asp-items="ViewBag.SemesterList" class="form-select shadow-sm">
                            <option value="">--- Chọn học kỳ ---</option>
                        </select>
                        <span asp-validation-for="SemesterId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NumberOfCredits" class="form-label fw-semibold">Số tín chỉ</label>
                        <input asp-for="NumberOfCredits" class="form-control shadow-sm" type="number" min="1" placeholder="VD: 3" />
                        <span asp-validation-for="NumberOfCredits" class="text-danger small"></span>
                    </div> *@

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold">Mô tả môn học</label>
                        <textarea asp-for="Description" class="form-control shadow-sm auto-resize" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label fw-semibold">Trạng thái</label>
                        <select asp-for="Status" class="form-select shadow-sm">
                            <option value="true">Hoạt động</option>
                            <option value="false">Không hoạt động</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-5 gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4 rounded-pill shadow">
                        <i class="bi bi-check-circle me-1"></i> Tạo mới
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
