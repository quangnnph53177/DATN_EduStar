@model API.ViewModel.SchedulesDTO

@{
    ViewData["Title"] = "Thêm lịch học";
}

<h2 class="text-primary mb-4">Thêm lịch học</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="ClassId" class="form-label">Lớp học</label>
        <select asp-for="ClassId" asp-items="ViewBag.ClassList" class="form-select"></select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RoomId" class="form-label">Phòng học</label>
        <select asp-for="RoomId" asp-items="ViewBag.RoomList" class="form-select"></select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StudyShiftId" class="form-label">Ca học</label>
        <select asp-for="StudyShiftId" asp-items="ViewBag.ShiftList" class="form-select"></select>
        <span asp-validation-for="StudyShiftId" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="WeekDayId" class="form-label">Thứ</label>
        <select asp-for="WeekDayId" asp-items="ViewBag.DayList" class="form-select"></select>
        <span asp-validation-for="WeekDayId" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
        <button type="submit" class="btn btn-success">➕ Thêm mới</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
