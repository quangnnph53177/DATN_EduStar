@using API.ViewModel
@model AssignStudentsRequest
@{
    ViewData["Title"] = "Gán sinh viên vào lớp";
    var studentList = ViewBag.StudentList as List<StudentDTO>;
    var classId = ViewBag.ClassId;
    var className = ViewBag.NameClass as string;
    var error = ViewBag.ErrorMessage as string;
}

<div class="container mt-4">
    <h2 class="text-primary">Gán sinh viên vào lớp: <span class="text-dark">@className</span></h2>

    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }

    <form asp-action="AssignStudent" method="post">
        <input type="hidden" name="SchedulesId" value="@classId" />

        <div class="card mt-3 shadow-sm">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <strong>Danh sách sinh viên chưa gán</strong>
               
            </div>
            <div class="card-body p-0">
                @if (studentList != null && studentList.Any())
                {
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%" class="text-center">
                                    <div>
                                        <input type="checkbox" id="selectAll" />
                                        <label for="selectAll" class="ms-1"></label>
                                    </div>
                                </th>
                                <th>Mã SV</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in studentList)
                            {
                                <tr>
                                    <td class="text-center">
                                        <input type="checkbox" name="StudentIds" value="@student.id" class="student-checkbox" />
                                    </td>
                                    <td>@student.StudentCode</td>
                                    <td>@student.FullName</td>
                                    <td>@student.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="p-3 text-muted">Không còn sinh viên nào để gán vào lớp.</div>
                }
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Gán sinh viên</button>
            <a asp-action="Details" asp-route-id="@classId" class="btn btn-secondary ms-2">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById("selectAll").addEventListener("change", function () {
            const checkboxes = document.querySelectorAll(".student-checkbox");
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}
