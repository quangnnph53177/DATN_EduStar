
@model IEnumerable<API.ViewModel.Lichcodinh>

@{
    ViewData["Title"] = "Lịch học cố định";
}

<h2 class="mb-4"> Danh sách lịch học cố định</h2>
<a asp-action="Auto">Auto</a>
<table class="table">
    <thead>
        <tr>
             @* <th>
            @Html.DisplayNameFor(model => model.Id)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weekdays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudyShift)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               @*  <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomCode)
                </td>
                <td>
                    @string.Join(", ", item.weekdays.Select(d => d.ToString()))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudyShift)
                </td>
                <td>
                    <a asp-controller="ClassMvc"
                       asp-action="Details"
                       asp-route-id="@item.ClassId"
                       class="btn btn-info btn-sm">
                        👁️ Xem chi tiết lớp
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>