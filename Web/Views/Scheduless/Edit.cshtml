@model API.ViewModel.SchedulesDTO

@{
    ViewData["Title"] = "Cập nhật lịch học";
}

<h2 class="mb-4">📝 Cập nhật lịch học</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">
        <div class="mb-3">
            <label asp-for="ClassName" class="form-label fw-semibold">Tên lớp học</label>
            <input asp-for="ClassName" class="form-control" placeholder="VD: CTDL01" />
            <span asp-validation-for="ClassName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SubjectId" class="form-label">Môn học</label>
            <select asp-for="SubjectId" asp-items="ViewBag.SubjectList" class="form-select shadow-sm">
                <option value="">-- Chọn môn học --</option>
            </select>
            <span asp-validation-for="SubjectId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="RoomId" class="form-label">Phòng học</label>
            <select asp-for="RoomId" asp-items="ViewBag.RoomList" class="form-select shadow-sm">
                <option value="">-- Chọn phòng học --</option>
            </select>
            <span asp-validation-for="RoomId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="StudyShiftId" class="form-label">Ca học</label>
            <select asp-for="StudyShiftId" asp-items="ViewBag.ShiftList" class="form-select shadow-sm">
                <option value="">-- Chọn ca học --</option>
            </select>
            <span asp-validation-for="StudyShiftId" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label class="form-label">🗓️ Chọn thứ trong tuần</label>
            <div class="row">
                @foreach (var item in (List<SelectListItem>)ViewBag.DayList)
                {
                    <div class="col-md-3">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox"
                                   name="WeekDayId"
                                   value="@item.Value"
                                   id="day_@item.Value"
                            @(item.Selected ? "checked" : "") />
                            <label class="form-check-label" for="day_@item.Value">@item.Text</label>
                        </div>
                    </div>
                }
            </div>
            <span asp-validation-for="WeekDayId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="startdate" class="form-label">📅 Ngày bắt đầu học</label>
            <input asp-for="startdate" type="date" class="form-control shadow-sm" />
            <span asp-validation-for="startdate" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TeacherId" class="form-label">👨‍🏫 Giảng viên</label>
            <select asp-for="TeacherId" asp-items="ViewBag.TeacherList" class="form-select shadow-sm">
                <option value="">-- Chọn giảng viên --</option>
            </select>
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index1" class="btn btn-outline-secondary">⬅ Quay lại</a>
        <button type="submit" class="btn btn-primary">💾 Cập nhật</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
