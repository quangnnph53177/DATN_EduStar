@model API.ViewModel.SchedulesDTO

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Lớp học</label>
        <select asp-for="ClassId" asp-items="ViewBag.ClassList" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Phòng học</label>
        <select asp-for="RoomId" asp-items="ViewBag.RoomList" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Ca học</label>
        <select asp-for="StudyShiftId" asp-items="ViewBag.ShiftList" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Thứ</label>
        <select asp-for="WeekDayId" asp-items="ViewBag.DayList" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>
