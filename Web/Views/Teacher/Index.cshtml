@model API.ViewModel.PagedResult<API.ViewModel.UserDTO>

@{
    ViewData["Title"] = "Danh sách người dùng";
}
<div class="container mt-4">

    <h2>Danh sách Quản trị viên</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <div class="d-flex justify-content-between align-items-center mb-3">
        @if (User.HasClaim("Permission", "Search"))
        {
            <form method="get" asp-action="SearchUS" class="mb-3 d-flex">
                <input type="text" name="keyword" class="form-control w-50" placeholder="Tìm kiếm người dùng..." />
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Làm mới</a>
            </form>
        }
        @if (User.HasClaim("Permission", "Create"))
        {
            <a asp-controller="Teacher" asp-action="Register" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>Thêm người dùng
            </a>
        }
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Người dùng</th>
                <th scope="col">Vai trò</th>
                <th scope="col">Trạng thái</th>
                <th scope="col" class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count(); i++)
            {
                var user = Model.Items[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="d-flex flex-column align-items-center me-2" style="width: 60px;">
                                <!-- Ảnh avatar (ẩn mặc định) -->
                                <img id="avatar-img-@i"
                                     src="@(string.IsNullOrEmpty(user.Avatar) ? "#" : $"https://localhost:7298/{user.Avatar}")"
                                     alt="No Avatar"
                                     class="d-none"
                                     style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;" />

                                <!-- Nút 👁 hoặc 👁‍🗨 -->
                                <button type="button"
                                        class="btn btn-sm btn-outline-primary mt-1"
                                        onclick="toggleAvatar(@i, '@user.Avatar')"
                                        id="toggle-btn-@i">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>

                            <div>
                                <div>
                                    <strong>@user.FullName</strong>
                                </div>
                                <div class="text-muted small">
                                    @user.Email
                                </div>
                                <div class="text-muted small">
                                    @user.UserCode
                                </div>
                            </div>
                        </div>
                    </td>
                    <td><span class="badge bg-danger">@string.Join(", ", user.RoleIds ?? new List<int>())</span></td>
                    <td>
                        <span class="badge bg-@(user.Statuss ? "success" : "secondary")">
                            @(user.Statuss ? "Hoạt động" : "Đã khóa")
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-controller="Teacher" asp-action="IndexUser" asp-route-username="@user.UserName" class="btn btn-outline-secondary btn-sm mx-1">🔍</a>
                        @if (User.HasClaim("Permission", "Create"))
                        {
                            <a asp-controller="Teacher" asp-action="UpdateUser" asp-route-username="@user.UserName" class="btn btn-outline-secondary btn-sm mx-1">✏️</a>
                            <a asp-controller="Teacher" asp-action="ChangeRole" asp-route-username="@user.UserName" class="btn btn-outline-secondary btn-sm mx-1">🔄</a>
                            <form asp-controller="Teacher" asp-action="LockUser" asp-route-username="@user.UserName" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn thay đổi trạng thái?');" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm mx-1 @(user.Statuss ? "btn-danger" : "btn-success")">
                                    @(user.Statuss ? "🔒" : "🔓")
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <span>Trang @Model.PageIndex / @Model.TotalPages</span>
        <div>
            @if (Model.HasPreviousPage)
            {
                <a class="btn btn-outline-primary btn-sm" href="?page=@(Model.PageIndex - 1)">« Trước</a>
            }
            @if (Model.HasNextPage)
            {
                <a class="btn btn-outline-primary btn-sm" href="?page=@(Model.PageIndex + 1)">Sau »</a>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function toggleAvatar(i, avatarUrl) {
            const avatarImg = document.getElementById(`avatar-img-${i}`);
            const button = document.getElementById(`toggle-btn-${i}`);
            const icon = button.querySelector('i');

            const hasAvatar = avatarUrl && avatarUrl.trim() !== '';

            if (hasAvatar) {
                const isVisible = !avatarImg.classList.contains("d-none");
                avatarImg.classList.toggle("d-none", isVisible);
            }

            icon.classList.toggle("bi-eye");
            icon.classList.toggle("bi-eye-slash");
        }
    </script>

}


