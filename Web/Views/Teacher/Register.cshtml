@model API.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản giảng viên";
}

<div class="container mt-5">
    <div class="card shadow rounded-3">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 text-primary">@ViewData["Title"]</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <form asp-controller="Teacher" asp-action="Register" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="User.UserName" class="form-label"></label>
                        <input asp-for="User.UserName" class="form-control" placeholder="Nhập tên đăng nhập" />
                        <span asp-validation-for="User.UserName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="User.PassWordHash" class="form-label">Mật khẩu</label>
                        <input asp-for="User.PassWordHash" type="password" class="form-control" placeholder="********" />
                        <span asp-validation-for="User.PassWordHash" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="User.Email" class="form-label"></label>
                        <input asp-for="User.Email" class="form-control" placeholder="example@email.com" />
                        <span asp-validation-for="User.Email" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="User.PhoneNumber" class="form-label">Số điện thoại</label>
                        <input asp-for="User.PhoneNumber" class="form-control" placeholder="0123456789" />
                        <span asp-validation-for="User.PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="User.FullName" class="form-label">Họ tên</label>
                        <input asp-for="User.FullName" class="form-control" />
                        <span asp-validation-for="User.FullName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="User.Dob" class="form-label">Ngày sinh</label>
                        <input asp-for="User.Dob" type="date" class="form-control" />
                        <span asp-validation-for="User.Dob" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Giới tính</label>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input type="radio" name="User.Gender" value="true" class="form-check-input" id="genderMale" />
                                <label class="form-check-label" for="genderMale">Nam</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" name="User.Gender" value="false" class="form-check-input" id="genderFemale" />
                                <label class="form-check-label" for="genderFemale">Nữ</label>
                            </div>
                        </div>
                        <span asp-validation-for="User.Gender" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="User.Address" class="form-label"></label>
                        <input asp-for="User.Address" class="form-control" />
                        <span asp-validation-for="User.Address" class="text-danger small"></span>
                    </div>

                    @* <div class="col-12">
                        <label class="form-label">Vai trò</label>
                        <div class="row">
                            @for (int i = 0; i < Model.RoleLists.Count; i++)
                            {
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="User.RoleIds"
                                               value="@Model.RoleLists[i].Value" id="role_@i" />
                                        <label class="form-check-label" for="role_@i">
                                            @Model.RoleLists[i].Text
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="User.RoleIds" class="text-danger small"></span>
                    </div> *@

                    <div class="col-12">
                        <label for="imgFile" class="form-label">Ảnh đại diện</label>
                        <input type="file" name="imgFile" id="imgFile" class="form-control" accept=".jpg,.jpeg,.png" />
                        <small class="text-muted">Chấp nhận định dạng: .jpg, .jpeg, .png</small>
                    </div>

                    <div class="col-12 d-flex justify-content-between mt-4">
                        <a asp-controller="Teacher" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle-fill"></i> Đăng ký
                        </button>
                    </div>
                </div>
            </form>

           @*  <div class="mt-4 text-center">
                <a asp-action="Upload" asp-controller="Users" class="btn btn-sm btn-primary">
                    <i class="bi bi-upload"></i> Upload danh sách người dùng
                </a>
            </div> *@
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
