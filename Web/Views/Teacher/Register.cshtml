@model API.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    //var roleList = ViewBag.RoleSelectList as List<SelectListItem>;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<h2>Đăng ký tài khoản</h2>
<a asp-action="Upload" asp-controller="Teacher" class="btn btn-secondary mt-2">Upload List User</a>
<form asp-controller="Teacher" asp-action="Register" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="User.UserName"></label>
        <input asp-for="User.UserName" class="form-control" />
        <span asp-validation-for="User.UserName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="User.PassWordHash">Mật khẩu</label>
        <input asp-for="User.PassWordHash" type="password" class="form-control" />
        <span asp-validation-for="User.PassWordHash" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="User.PhoneNumber">Số điện thoại</label>
        <input asp-for="User.PhoneNumber" class="form-control" />
        <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="User.FullName">Tên đầy đủ</label>
        <input asp-for="User.FullName" class="form-control" />
        <span asp-validation-for="User.FullName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Vai trò</label>
        <div>
            @for (int i = 0; i < Model.RoleLists.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="User.RoleIds"
                           value="@Model.RoleLists[i].Value"
                           id="role_@i" />
                    <label class="form-check-label" for="role_@i">
                        @Model.RoleLists[i].Text
                    </label>
                </div>
            }
        </div>
        <span asp-validation-for="User.RoleIds" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="User.Dob">Ngày sinh</label>
        <input asp-for="User.Dob" type="date" class="form-control" />
        <span asp-validation-for="User.Dob" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Giới tính</label>
        <div>
            <label>
                <input type="radio" name="User.Gender" value="true" /> Nam
            </label>
            <label class="ms-3">
                <input type="radio" name="User.Gender" value="false" /> Nữ
            </label>
        </div>
        <span asp-validation-for="User.Gender" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="User.Address"></label>
        <input asp-for="User.Address" class="form-control" />
        <span asp-validation-for="User.Address" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="imgFile">Ảnh đại diện</label>
        <input type="file" name="imgFile" id="imgFile" class="form-control" accept=".jpg,.jpeg,.png" />
        <small class="text-muted">Chỉ chấp nhận định dạng: .jpg, .jpeg, .png</small>
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
    <a asp-action="Index" asp-controller="Teacher" class="btn btn-secondary mt-2">Danh sách người dùng</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
