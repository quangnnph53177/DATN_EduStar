<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduStar</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
            background-color: #f0f2f5;
        }

        td, th {
            word-wrap: break-word;
            white-space: normal;
        }

        .wrapper {
            flex: 1;
            display: flex;
            overflow: hidden;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #004085;
            color: #fff;
            overflow-y: auto;
        }

        .main-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            flex: 1;
            padding: 1rem;
            overflow-y: auto;
            background-color: #fff;
        }

        footer {
            background-color: #004085;
            color: white;
            text-align: center;
            padding: 0.75rem;
            font-size: 0.875rem;
        }

        .sidebar .nav-link {
            color: #fff;
            margin-bottom: 0.5rem;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active-flame {
            background-color: #0d6efd;
            border-radius: 0.375rem;
            padding-left: 0.5rem;
        }

        .dropdown .dropdown-menu {
            min-width: 200px;
        }

        .loader {
            display: none;
            height: 60px;
            aspect-ratio: 1;
            position: fixed;
            z-index: 1050;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .loader::before,
        .loader::after {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 50%;
            transform-origin: bottom;
        }

        .loader::after {
            background: radial-gradient(at 75% 15%, #fffb, #0000 35%),
                        radial-gradient(at 80% 40%, #0000, #0008),
                        radial-gradient(circle 5px, #fff 94%, #0000),
                        radial-gradient(circle 10px, #000 94%, #0000),
                        linear-gradient(#F93318 0 0) top/100% calc(50% - 5px),
                        linear-gradient(#fff 0 0) bottom/100% calc(50% - 5px) #000;
            background-repeat: no-repeat;
            animation: l20 1s infinite cubic-bezier(0.5, 120, 0.5, -120);
        }

        .loader::before {
            background: #ddd;
            filter: blur(8px);
            transform: scaleY(0.4) translate(-13px, 0px);
        }

    }
    </style>
</head>
<body style="backdrop-filter: blur(2px)">
    <div class="wrapper">
        <!-- Sidebar -->

        <div class="col-md-2 sidebar p-3">
            <h5 class="mb-4">
                @{
                    var roleNames = User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(r => r.Value);
                    var displayRoles = string.Join(", ", roleNames);
                }
                Người dùng: @displayRoles
            </h5>

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active-flame" : "")"
                       asp-controller="Home" asp-action="Index">🏠 Dashboard</a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active-flame" : "")"
                           asp-controller="Users" asp-action="Index">👤 Quản lý người dùng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Teacher" ? "active-flame" : "")"
                           asp-controller="Teacher" asp-action="Index">👤 Danh sách giảng viên</a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Student" ? "active-flame" : "")"
                       asp-controller="Student" asp-action="Index">🎓 Danh sách sinh viên</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Statistical" ? "active-flame" : "")"
                       asp-controller="Statistical" asp-action="DashBoard">📊 Thống kê</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Scheduless" ? "active-flame" : "")"
                       asp-controller="Scheduless" asp-action="Index">📅 Lịch học</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "SubjectW" ? "active-flame" : "")"
                       asp-controller="SubjectW" asp-action="Index">📘 Môn học</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Attendance" ? "active-flame" : "")"
                       asp-controller="Attendance" asp-action="IndexSession">📘 Điểm danh</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ClassMvc" ? "active-flame" : "")"
                       asp-controller="ClassMvc" asp-action="Index">🏫 Lớp học</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Complaint" ? "active-flame" : "")"
                       asp-controller="Complaint" asp-action="Index">⚠️ Khiếu nại</a>
                </li>

                @if (User.HasClaim("Permission", "Create"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Roles" ? "active-flame" : "")"
                           asp-controller="Roles" asp-action="Index">🛡️ Phân quyền</a>
                    </li>
                }
            </ul>

            <hr />
            <div class="dropdown">
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="btn btn-light text-dark w-100 dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        👋 Xin chào, @User.Identity?.Name
                    </button>
                    <ul class="dropdown-menu w-100">
                        <li><a class="dropdown-item" asp-controller="Users" asp-action="IndexUser">👤 Hồ sơ cá nhân</a></li>
                        <li><a class="dropdown-item" asp-controller="Users" asp-action="IndexLog">🕓 Lịch sử hoạt động</a></li>
                        <li>
                            <form method="post" asp-controller="Users" asp-action="Logout">
                                <button type="submit" class="dropdown-item">🚪 Đăng xuất</button>
                            </form>
                        </li>
                    </ul>
                }
                else
                {
                    <a class="btn btn-outline-light w-100" asp-controller="Users" asp-action="Login">🔐 Đăng nhập</a>
                }
            </div>
        </div>

        <!-- Main content -->
        <div class="main-wrapper">
            <div class="main-content">
               @*  <marquee behavior="alternate" direction="right"> *@
                @RenderBody()
               @*  </marquee> *@
                <marquee style="font-size: 44px;" scrollamount="100" scrolldelay="3" behavior="alternate">
                    ỐI RỒI ÔI ỐI RỒI ÔI TRÌNH LÀ J MÀ TRÌNH AI CHẤM
                </marquee>
            </div>
            <footer>
                <marquee behavior="scroll" direction="left">
                   @*  &copy; @DateTime.Now.Year - EduStar. Hành trang vững – Tương lai rộng mở. *@ TRÌNH LÀ GÌ
                </marquee>
            </footer>
        </div>
    </div>

    <!-- Loader -->
    <div id="page-loader" class="loader"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const loader = document.getElementById("page-loader");

        window.addEventListener("load", () => {
            if (loader) loader.style.display = "none";
        });

        document.addEventListener("DOMContentLoaded", () => {
            const links = document.querySelectorAll("a.nav-link, a.btn, a[href]");
            links.forEach(link => {
                link.addEventListener("click", (e) => {
                    const href = link.getAttribute("href");
                    const target = link.getAttribute("target");

                    const isExternal = href?.startsWith("http") || href?.startsWith("mailto:");
                    const isAnchor = href === "#" || href === "" || href?.startsWith("javascript");

                    if (!isExternal && !isAnchor && !target) {
                        loader.style.display = "block";
                    }
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
