@model API.ViewModel.ProcessComplaintDTO
@{
    ViewData["Title"] = "Xử lý khiếu nại đổi lớp";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="bi bi-pencil-square me-1"></i> Xử lý khiếu nại đổi lớp</h4>
    </div>
    <div class="card-body">
        <form asp-action="ProcessClassComplaint" method="post">
            <input type="hidden" asp-for="ComplaintId" />

            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-bold">Trạng thái xử lý</label>
                <select asp-for="Status" class="form-select">
                    <option value="">-- Chọn trạng thái --</option>
                    <option value="Approved">Chấp thuận đổi lớp</option>
                    <option value="Rejected">Từ chối</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Note" class="form-label fw-bold">Phản hồi</label>
                <textarea asp-for="Note" rows="4" class="form-control" placeholder="Nhập nội dung phản hồi..."></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-send-fill"></i> Gửi xử lý
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
