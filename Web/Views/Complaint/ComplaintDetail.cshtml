@model List<API.ViewModel.ComplaintDTO>

@{
    ViewData["Title"] = "Chi tiết khiếu nại";
}

<h2 class="mb-4"><i class="bi bi-info-circle"></i> Chi tiết khiếu nại</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (Model != null && Model.Any())
{
    var complaint = Model.First();

    <div class="card shadow-lg border-0 mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span>📄 Thông tin khiếu nại #@complaint.Id</span>
            <span class="badge @(complaint.Statuss == "Đã xử lý" ? "bg-success" : "bg-warning text-dark")">
                @complaint.Statuss
            </span>
        </div>

        <div class="card-body">

            <!-- Thông tin chung -->
            <h5 class="text-primary mb-3"><i class="bi bi-card-text"></i> Thông tin chung</h5>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Loại khiếu nại:</strong> @complaint.ComplaintType
                </div>
                <div class="col-md-6">
                    <strong>Lý do:</strong> @complaint.Reason
                </div>
            </div>

            <!-- Bằng chứng -->
            <div class="mb-4">
                <strong>Bằng chứng:</strong>
                @if (!string.IsNullOrEmpty(complaint.ProofUrl))
                {
                    <a class="btn btn-sm btn-outline-primary ms-2" href="@complaint.ProofUrl" target="_blank">
                        <i class="bi bi-link-45deg"></i> Xem bằng chứng
                    </a>
                }
                else
                {
                    <span class="text-muted ms-2">Không có</span>
                }
            </div>

            <!-- Thông tin lớp -->
            <h5 class="text-primary mb-3"><i class="bi bi-building"></i> Thông tin lớp</h5>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Lớp hiện tại:</strong> @complaint.CurrentClassName
                </div>
                <div class="col-md-6">
                    <strong>Lớp yêu cầu:</strong> @complaint.RequestedClassName
                </div>
            </div>

            <!-- Thông tin xử lý -->
            <h5 class="text-primary mb-3"><i class="bi bi-person-check"></i> Thông tin xử lý</h5>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Học viên:</strong> @complaint.StudentName
                </div>
                <div class="col-md-6">
                    <strong>Người xử lý:</strong> @complaint.ProcessedByName
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Ngày tạo:</strong> <i class="bi bi-calendar-event"></i> @complaint.CreateAt?.ToString("dd/MM/yyyy HH:mm")
                </div>
                <div class="col-md-6">
                    <strong>Ngày xử lý:</strong> <i class="bi bi-calendar-check"></i> @complaint.ProcessedAt?.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

            <div class="mb-3">
                <strong>Phản hồi:</strong>
                <div class="border rounded p-2 bg-light">@complaint.ResponseNote</div>
            </div>

        </div>
    </div>

    <a href="@Url.Action("Index", "Complaint")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
}
else
{
    <div class="alert alert-warning"><i class="bi bi-exclamation-triangle"></i> Không tìm thấy dữ liệu khiếu nại.</div>
}

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
