@model List<API.ViewModel.ComplaintDTO>
@{
    ViewData["Title"] = "Danh sách khiếu nại";
}

<!-- Thông báo -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-1"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-1"></i>
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Tiêu đề + nút -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0 text-primary">
        <i class="bi bi-clipboard-check-fill me-2"></i> @ViewData["Title"]
    </h2>
    <div>
        <a asp-controller="Complaint" asp-action="ClassChangeComplaint" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-1"></i> Khiếu nại đổi lớp
        </a>
    </div>
</div>

<!-- Thống kê nhanh -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center shadow-sm border-primary">
            <div class="card-body">
                <i class="bi bi-list-ul fs-4 text-primary mb-2 d-block"></i>
                <h6 class="text-muted">Tổng khiếu nại</h6>
                <h3 class="fw-bold">@((Model?.Count() ?? 0))</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm border-warning">
            <div class="card-body">
                <i class="bi bi-hourglass-split fs-4 text-warning mb-2 d-block"></i>
                <h6 class="text-muted">Đang chờ xử lý</h6>
                <h3 class="fw-bold">@((Model?.Count(x => x.Statuss == "Pending") ?? 0))</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm border-primary">
            <div class="card-body">
                <i class="bi bi-check2-circle fs-4 text-success mb-2 d-block"></i>
                <h6 class="text-muted">Đã chấp thuận</h6>
                <h3 class="fw-bold text-success">@((Model?.Count(x => x.Statuss == "Approved") ?? 0))</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm border-danger">
            <div class="card-body">
                <i class="bi bi-x-circle fs-4 text-danger mb-2 d-block"></i>
                <h6 class="text-muted">Đã từ chối</h6>
                <h3 class="fw-bold text-danger">@((Model?.Count(x => x.Statuss == "Rejected") ?? 0))</h3>
            </div>
        </div>
    </div>
</div>

<!-- Danh sách khiếu nại -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <i class="bi bi-table me-2"></i> Danh sách chi tiết
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Loại</th>
                        <th>Lý do</th>
                        <th>Trạng thái</th>
                        <th>Người gửi</th>
                        <th>Người xử lý</th>
                        <th>Ngày tạo</th>
                        <th>Phản hồi</th>
                        <th>Xử lý lúc</th>
                        <th class="text-center">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.ComplaintType</td>
                                <td>@item.Reason</td>
                                <td>
                                    @if (item.Statuss == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-hourglass-split me-1"></i> Chờ xử lý
                                        </span>
                                    }
                                    else if (item.Statuss == "Approved")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check2-circle me-1"></i> Chấp thuận
                                        </span>
                                    }
                                    else if (item.Statuss == "Rejected")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i> Từ chối
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Statuss</span>
                                    }
                                </td>
                                <td>@item.StudentName</td>
                                <td>@item.ProcessedByName</td>
                                <td>@item.CreateAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.ResponseNote</td>
                                <td>@item.ProcessedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center">
                                        <a asp-action="ComplaintDetail" asp-route-id="@item.Id"
                                           class="btn btn-outline-info btn-sm mx-1" title="Xem chi tiết">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        @if (User.HasClaim("Permission", "ProcessComplaint") && item.Statuss == "Pending")
                                        {
                                            <a asp-action="ProcessClassComplaint" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-warning mx-1" title="Xử lý khiếu nại">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                                Không có khiếu nại nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
