@model IEnumerable<API.ViewModel.ClassViewModel>

<div class="flex-1 bg-gray-50">
    <header>
        <h1>Quản lý lớp học</h1>
        <p>Danh sách và thông tin lớp học</p>
    </header>

    <div class="p-6">
        <!-- Classes Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
            @foreach (var classItem in Model)
            {
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
                    <!-- Header -->
                    <div class="flex items-start justify-between mb-4">
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">@classItem.ClassName</h3>
                            <p class="text-sm text-gray-500 font-mono">Môn học: @classItem.SubjectName</p>
                        </div>
                    </div>

                    <!-- Semester & Year -->
                    <div class="mb-4">
                        <p class="font-medium text-blue-600 mb-1">Học kỳ: @classItem.Semester @classItem.YearSchool</p>
                        <p class="text-sm text-gray-600">Số tín chỉ: @classItem.NumberOfCredits</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
