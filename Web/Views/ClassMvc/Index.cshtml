@model IEnumerable<API.ViewModel.ClassViewModel>

@{
    ViewData["Title"] = "Danh sách Lớp học";
}

<h1 class="mt-4">Danh sách Lớp học</h1>

<p class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Thêm Lớp học mới</a>
</p>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<table class="table table-striped table-bordered mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Mã lớp</th>
            <th>Tên lớp</th>
            <th>Môn học</th>
            <th>Học kỳ</th>
            <th>Năm học</th>
            <th>Số tín chỉ</th>
            <th>Giảng viên phụ trách</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ClassId)</td>
                    <td>@Html.DisplayFor(modelItem => item.ClassName)</td>
                    <td>@Html.DisplayFor(modelItem => item.SubjectName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Semester)</td>
                    <td>@Html.DisplayFor(modelItem => item.YearSchool)</td>
                    <td>@Html.DisplayFor(modelItem => item.NumberOfCredits)</td>
                    <td>@Html.DisplayFor(modelItem => item.TeacherName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClassId" class="btn btn-sm btn-info">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.ClassId" class="btn btn-sm btn-secondary">Chi tiết</a> |
                        <a asp-action="Delete" asp-route-id="@item.ClassId" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Không có dữ liệu lớp học nào.</td>
            </tr>
        }
    </tbody>
</table>