@model API.ViewModel.ClassUpdateViewModel

@{
    ViewData["Title"] = "Sửa thông tin Lớp học";
}

<h1 class="mt-4">Sửa thông tin Lớp học</h1>
<hr />

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubjectId" /> <div class="form-group mb-3">
                <label asp-for="ClassName" class="control-label">Tên lớp</label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Semester" class="control-label">Học kỳ</label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="YearSchool" class="control-label">Năm học</label>
                <input asp-for="YearSchool" class="form-control" />
                <span asp-validation-for="YearSchool" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TeacherName" class="control-label">Giảng viên giảng dạy</label>
                <input asp-for="TeacherName" class="form-control" />
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}