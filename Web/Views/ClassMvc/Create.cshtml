@model API.ViewModel.ClassCreateViewModel

@{
    ViewData["Title"] = "Tạo lớp học mới";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]</h4>
        </div>
        <div class="card-body p-4">

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-6">
                    <label asp-for="ClassName" class="form-label">📘 Tên lớp</label>
                    <input asp-for="ClassName" class="form-control" placeholder="Nhập tên lớp..." />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SubjectId" class="form-label">📚 Môn học</label>
                    <select asp-for="SubjectId" asp-items="ViewBag.SubjectList" class="form-select">
                        <option value="">-- Chọn môn học --</option>
                    </select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Semester" class="form-label">🗓️ Học kỳ</label>
                    <input asp-for="Semester" class="form-control" placeholder="VD: SP2025 hoặc Spring2025" />
                    <span asp-validation-for="Semester" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="YearSchool" class="form-label">📅 Năm học</label>
                    <input asp-for="YearSchool" class="form-control" placeholder="VD: 2025-2026" />
                    <span asp-validation-for="YearSchool" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="TeacherId" class="form-label">👨‍🏫 Giảng viên phụ trách</label>
                    <select asp-for="TeacherId" asp-items="ViewBag.TeacherList" class="form-select">
                        <option value="">-- Chọn giảng viên --</option>
                    </select>
                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                </div>

                <div class="col-12 mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle me-1"></i> Tạo mới
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
