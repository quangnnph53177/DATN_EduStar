@using API.ViewModel
@model List<IndexAttendanceViewModel>

<h2>Danh sách phiên điểm danh</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Tạo phiên điểm danh</a>
</p>
<form asp-action="IndexSession" method="post" class="row mb-3">
    <div class="col-md-2">
        <select asp-items=" ViewBag.ClassList" name="classId" class="form-control">
            <option value="">-- Lớp học --</option>
        </select>
    </div>
    <div class="col-md-2">
        <select asp-items="ViewBag.ShiftList" name="studyShiftid" class="form-control">
            <option value="">-- Ca học --</option>
        </select>
    </div>
    <div class="col-md-2">
        <select asp-items="ViewBag.RoomList" name="roomid" class="form-control">
            <option value="">-- Phòng học --</option>
        </select>
    </div>
    <div class="col-md-2">
        <select asp-items="ViewBag.SubjectList" name="subjectid" class="form-control">
            <option value="">-- Môn học --</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">🔍 Tìm kiếm</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã phiên</th>
            <th>Lớp</th>
            <th>Môn học</th>
            <th>Ca học</th>
            <th>Thứ</th>
            <th>Phòng</th>
            <th>Bắt đầu</th>
            <th>Kết thúc</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SessionCode</td>
                <td>@item.ClassName</td>
                <td>@item.SubjectName</td>
                <td>@item.ShiftStudy</td>
                <td>@item.WeekDay</td>
                <td>@item.RoomCode</td>
                <td>@item.StartTime?.ToString("HH:mm")</td>
                <td>@item.EndTime?.ToString("HH:mm")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.AttendanceId" class="btn btn-info btn-sm">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
