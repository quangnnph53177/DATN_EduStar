@using API.ViewModel
@model List<StudentAttendanceHistory>

<style>
    .history-header {
        background: linear-gradient(135deg, #7c3aed 0%, #a855f7 100%);
        color: white;
        padding: 2.5rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

    .history-stats {
        display: flex;
        gap: 2rem;
        margin-top: 1.5rem;
    }

    .stat-item {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        padding: 1rem 1.5rem;
        border-radius: 12px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .stat-number {
        font-size: 1.5rem;
        font-weight: 700;
    }

    .history-table {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .status-present {
        background: #dcfce7;
        color: #166534;
    }

    .status-absent {
        background: #fee2e2;
        color: #991b1b;
    }

    .status-late {
        background: #fef3c7;
        color: #92400e;
    }

    .subject-tag {
        background: linear-gradient(135deg, var(--primary-color) 0%, #1d4ed8 100%);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .time-info {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .time-main {
        font-weight: 600;
        color: var(--gray-800);
    }

    .time-sub {
        font-size: 0.8rem;
        color: var(--gray-600);
</style>

<div class="container-fluid px-4">
    <div class="history-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-3">
                    <i class="bi bi-clock-history me-3"></i>
                    Lịch sử điểm danh của bạn
                </h2>
                <p class="lead mb-0 opacity-90">Theo dõi quá trình học tập và tham gia lớp học</p>
            </div>
            <div class="col-md-4 text-end">
                <form asp-action="StudentCheckIn" method="post">
                    <button type="submit" class="btn btn-checkin">
                        <i class="bi bi-camera me-2"></i> Điểm danh khuôn mặt
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- phần bảng giữ nguyên -->
    <div class="history-table">
        <table class="table table-hover mb-0">
            <thead class="table-header">
                <tr>
                    <th><i class="bi bi-book me-1"></i> Môn học</th>
                    <th><i class="bi bi-people me-1"></i> Lớp</th>
                    <th><i class="bi bi-clock me-1"></i> Ca học</th>
                    <th><i class="bi bi-calendar-week me-1"></i> Thứ</th>
                    <th><i class="bi bi-stopwatch me-1"></i> Thời gian</th>
                    <th><i class="bi bi-check-square me-1"></i> Trạng thái</th>
                    <th><i class="bi bi-chat-text me-1"></i> Ghi chú</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="subject-tag">@item.SubjectName</span>
                        </td>
                        <td>
                            <strong>@item.ClassName</strong>
                        </td>
                        <td>
                            <span class="badge bg-info text-dark">@item.Shift</span>
                        </td>
                        <td>
                            <i class="bi bi-calendar3 text-muted me-1"></i>
                            @item.WeekDay
                        </td>
                        <td>
                            <div class="time-info">
                                @if (item.CheckInTime.HasValue)
                                {
                                    <span class="time-main">@item.CheckInTime.Value.ToString("HH:mm")</span>
                                    <span class="time-sub">@item.CheckInTime.Value.ToString("dd/MM/yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">--</span>
                                }
                            </div>
                        </td>
                        <td>
                            @switch (item.Status?.ToLower())
                            {
                                case "present":
                                    <span class="status-badge status-present">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Có mặt
                                    </span>
                                    break;
                                case "absent":
                                    <span class="status-badge status-absent">
                                        <i class="bi bi-x-circle me-1"></i>
                                        Vắng mặt
                                    </span>
                                    break;
                                case "late":
                                    <span class="status-badge status-late">
                                        <i class="bi bi-clock me-1"></i>
                                        Đi muộn
                                    </span>
                                    break;
                                default:
                                    <span class="status-badge bg-secondary text-white">
                                        <i class="bi bi-question-circle me-1"></i>
                                        @item.Status
                                    </span>
                                    break;
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <span class="text-muted">@item.Description</span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Không có ghi chú</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">Chưa có lịch sử điểm danh</h4>
            <p class="text-muted">Lịch sử điểm danh sẽ được hiển thị khi bạn tham gia các buổi học.</p>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
