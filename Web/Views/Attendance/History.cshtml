@using API.ViewModel
@model List<StudentAttendanceHistory>

<h3>Lịch sử điểm danh của bạn</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Môn học</th>
            <th>Lớp</th>
            <th>Ca học</th>
            <th>Thứ</th>
            <th>Thời gian điểm danh</th>
            <th>Trạng thái</th>
            <th>Ghi chú</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SubjectName</td>
                <td>@item.ClassName</td>
                <td>@item.Shift</td>
                <td>@item.WeekDay</td>
                <td>@item.CheckInTime?.ToString("HH:mm dd/MM/yyyy")</td>
                <td>@item.Status</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>
