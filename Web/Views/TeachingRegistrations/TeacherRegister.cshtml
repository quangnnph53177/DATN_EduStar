@model API.ViewModel.TeachingRegistrationViewModel

@{
    ViewData["Title"] = "Đăng ký giảng dạy";
    var classList = ViewBag.ClassList as List<SelectListItem>;
    var semesterList = ViewBag.SemesterList as List<SelectListItem>;
    var shiftList = ViewBag.ShiftList as List<SelectListItem>;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0"><i class="bi bi-calendar-plus me-2"></i> @ViewData["Title"]</h4>
        </div>

        <div class="card-body px-4 py-4">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success"><i class="bi bi-check-circle-fill me-1"></i> @TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger"><i class="bi bi-x-circle-fill me-1"></i> @TempData["ErrorMessage"]</div>
            }

            <form asp-action="TeacherRegister" method="post" class="row g-4">
                <div class="col-md-6">
                    <label asp-for="ClassId" class="form-label">Lớp</label>
                    <select asp-for="ClassId" asp-items="classList" class="form-select">
                        <option value="">-- Chọn lớp --</option>
                    </select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SemesterId" class="form-label">Học kỳ</label>
                    <select asp-for="SemesterId" asp-items="semesterList" class="form-select">
                        <option value="">-- Chọn học kỳ --</option>
                    </select>
                    <span asp-validation-for="SemesterId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Lịch học trong tuần</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="dayGroup" value="2-4-6" id="d246">
                        <label class="form-check-label" for="d246">Thứ 2 - 4 - 6</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="dayGroup" value="3-5-7" id="d357">
                        <label class="form-check-label" for="d357">Thứ 3 - 5 - 7</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="StudyShiftId" class="form-label">Ca học</label>
                    <select asp-for="StudyShiftId" asp-items="shiftList" class="form-select">
                        <option value="">-- Chọn ca học --</option>
                    </select>
                    <span asp-validation-for="StudyShiftId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2-circle me-1"></i> Đăng ký
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
