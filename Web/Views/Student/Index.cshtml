@model IEnumerable<API.ViewModel.StudentViewModels>

@{
    ViewData["Title"] = "Danh sách học viên";
    var selectedGender = Context.Request.Query["gender"].ToString();
    var selectedStatus = Context.Request.Query["status"].ToString();
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary mb-1">Danh sách sinh viên</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 small">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Sinh viên</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Auditlog" class="btn btn-light border">
                <i class="bi bi-clock-history me-1"></i> Lịch sử
            </a>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-2">
                <div class="col-md-3">
                    <input name="studentCode"
                           class="form-control"
                           placeholder="Mã sinh viên"
                           value="@Context.Request.Query["studentCode"]" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-1"></i> Tìm kiếm
                    </button>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-outline-secondary w-100"
                            id="toggleAdvancedSearch">
                        <i class="bi bi-funnel me-1"></i> Nâng cao
                    </button>
                </div>
                <div class="col-md-auto ms-auto">
                    <a asp-action="Upload" asp-controller="Users" class="btn btn-success">
                        <i class="bi bi-upload me-1"></i> Upload
                    </a>
                </div>
            </form>

            <!-- Advanced Search -->
            <div id="advancedSearch" class="collapse mt-3">
                <div class="row g-3">
                    <div class="col-md-3">
                        <input name="fullName" class="form-control" placeholder="Họ và tên"
                               value="@Context.Request.Query["fullName"]" />
                    </div>
                    <div class="col-md-3">
                        <input name="username" class="form-control" placeholder="Username"
                               value="@Context.Request.Query["username"]" />
                    </div>
                    <div class="col-md-3">
                        <input name="email" type="email" class="form-control" placeholder="Email"
                               value="@Context.Request.Query["email"]" />
                    </div>
                    <div class="col-md-3">
                        <select name="gender" class="form-select">
                            <option value="">Giới tính</option>
                            <option value="true" selected="@(selectedGender == "true")">Nam</option>
                            <option value="false" selected="@(selectedGender == "false")">Nữ</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select name="status" class="form-select">
                            <option value="">Trạng thái</option>
                            <option value="true" selected="@(selectedStatus == "true")">Hoạt động</option>
                            <option value="false" selected="@(selectedStatus == "false")">Không hoạt động</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-fill">
                            Áp dụng
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-light border">
                            Xóa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Export & Actions -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="small text-muted">
            Tổng số: <strong>@Model.Count()</strong> sinh viên
        </span>
        <div class="d-flex gap-2">
            <form asp-action="Export" method="post">
                <button type="submit" class="btn btn-outline-success">
                    <i class="bi bi-download me-1"></i> Excel
                </button>
            </form>
            <form asp-action="CreateSV" method="post">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus me-1"></i> Thêm
                </button>
            </form>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Mã SV</th>
                        <th>Họ tên</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th class="text-center">Điện thoại</th>
                        <th class="text-center">Giới tính</th>
                        <th class="text-center">Ngày sinh</th>
                        <th>Địa chỉ</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Any() == true)
                    {
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td class="text-center"><code>@student.StudentCode</code></td>
                                <td><strong>@student.FullName</strong></td>
                                <td class="text-muted">@student.UserName</td>
                                <td>@student.Email</td>
                                <td class="text-center">@student.PhoneNumber</td>
                                <td class="text-center">
                                    @(student.Gender.HasValue ? (student.Gender.Value ? "Nam" : "Nữ") : "--")
                                </td>
                                <td class="text-center">@student.Dob?.ToString("dd/MM/yyyy")</td>
                                <td class="text-truncate" style="max-width:150px">@student.Address</td>
                                <td class="text-center">
                                    <span class="badge @(student.Status == true ? "bg-success" : "bg-secondary")">
                                        @(student.Status == true ? "Hoạt động" : "Không")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@student.id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="EditBoss" asp-route-id="@student.id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Lock" asp-route-id="@student.id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger"
                                                    onclick="return confirm('Xác nhận thay đổi trạng thái?')">
                                                <i class="bi bi-@(student.Status == true ? "lock" : "unlock")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                Không có dữ liệu
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleButton = document.getElementById('toggleAdvancedSearch');
            const advancedSearch = document.getElementById('advancedSearch');

            toggleButton?.addEventListener('click', () => {
                new bootstrap.Collapse(advancedSearch, { toggle: true });
            });

            const urlParams = new URLSearchParams(window.location.search);
            if (["fullName", "username", "email", "gender", "status"].some(f => urlParams.get(f))) {
                new bootstrap.Collapse(advancedSearch, { show: true });
            }
        });
    </script>
}
