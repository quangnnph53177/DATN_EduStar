@model API.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Thêm sinh viên mới";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-1">
                <i class="bi bi-person-plus-fill me-2"></i>
                Thêm sinh viên mới
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Sinh viên</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-9">
            <form asp-controller="Student" asp-action="CreateSV" method="post" enctype="multipart/form-data" id="createForm">
                <!-- Account Information -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-gradient-primary text-black">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-shield-lock me-2"></i>
                            Thông tin tài khoản
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="User.UserName" class="form-label">
                                    Tên đăng nhập <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person-badge"></i>
                                    </span>
                                    <input asp-for="User.UserName"
                                           class="form-control"
                                           placeholder="vd: nguyenvana"
                                           required />
                                </div>
                                <span asp-validation-for="User.UserName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="User.PassWordHash" class="form-label">
                                    Mật khẩu <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input asp-for="User.PassWordHash"
                                           type="password"
                                           class="form-control"
                                           placeholder="Nhập mật khẩu"
                                           id="password"
                                           required />
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="User.PassWordHash" class="text-danger small"></span>
                                <div class="form-text">Mật khẩu phải có ít nhất 6 ký tự</div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="User.Email" class="form-label">
                                    Email <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input asp-for="User.Email"
                                           type="email"
                                           class="form-control"
                                           placeholder="example@email.com"
                                           required />
                                </div>
                                <span asp-validation-for="User.Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="User.PhoneNumber" class="form-label">
                                    Số điện thoại
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-telephone"></i>
                                    </span>
                                    <input asp-for="User.PhoneNumber"
                                           class="form-control"
                                           placeholder="0123456789"
                                           pattern="[0-9]{10}"
                                           title="Số điện thoại phải có 10 chữ số" />
                                </div>
                                <span asp-validation-for="User.PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Personal Information -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-person-vcard me-2"></i>
                            Thông tin cá nhân
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="User.FullName" class="form-label">
                                    Họ và tên <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input asp-for="User.FullName"
                                           class="form-control"
                                           placeholder="Nguyễn Văn A"
                                           required />
                                </div>
                                <span asp-validation-for="User.FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="User.Dob" class="form-label">
                                    Ngày sinh
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-calendar-date"></i>
                                    </span>
                                    <input asp-for="User.Dob"
                                           type="date"
                                           class="form-control"
                                           max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")"
                                           min="@DateTime.Now.AddYears(-60).ToString("yyyy-MM-dd")" />
                                </div>
                                <span asp-validation-for="User.Dob" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">
                                    Giới tính <span class="text-danger">*</span>
                                </label>
                                <div class="d-flex gap-4 pt-2">
                                    <div class="form-check">
                                        <input type="radio"
                                               name="User.Gender"
                                               value="true"
                                               class="form-check-input"
                                               id="genderMale"
                                               checked />
                                        <label class="form-check-label" for="genderMale">
                                            <i class="bi bi-gender-male text-primary me-1"></i>
                                            Nam
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input type="radio"
                                               name="User.Gender"
                                               value="false"
                                               class="form-check-input"
                                               id="genderFemale" />
                                        <label class="form-check-label" for="genderFemale">
                                            <i class="bi bi-gender-female text-danger me-1"></i>
                                            Nữ
                                        </label>
                                    </div>
                                </div>
                                <span asp-validation-for="User.Gender" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="User.Address" class="form-label">
                                    Địa chỉ
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-geo-alt"></i>
                                    </span>
                                    <input asp-for="User.Address"
                                           class="form-control"
                                           placeholder="123 Đường ABC, Quận XYZ, TP.HCM" />
                                </div>
                                <span asp-validation-for="User.Address" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label for="imgFile" class="form-label">
                                    Ảnh đại diện
                                </label>
                                <div class="input-group">
                                    <input type="file"
                                           name="imgFile"
                                           id="imgFile"
                                           class="form-control"
                                           accept=".jpg,.jpeg,.png" />
                                    <label class="input-group-text" for="imgFile">
                                        <i class="bi bi-upload"></i>
                                    </label>
                                </div>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Chấp nhận định dạng: JPG, JPEG, PNG (Tối đa 2MB)
                                </div>
                                <div id="imagePreview" class="mt-3" style="display:none;">
                                    <img src="" alt="Preview" class="img-thumbnail" style="max-height: 200px;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="d-flex justify-content-between">
                    <a asp-controller="Student" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>
                        Quay lại
                    </a>
                    <div>
                        <button type="reset" class="btn btn-outline-warning me-2">
                            <i class="bi bi-arrow-clockwise me-1"></i>
                            Làm mới
                        </button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle-fill me-1"></i>
                            Tạo tài khoản
                        </button>
                    </div>
                </div>
            </form>
        </div>

