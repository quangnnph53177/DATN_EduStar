@{
    ViewData["Title"] = "Quên mật khẩu";
}

<h2>Quên mật khẩu</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="post" asp-action="ForgetPassword">
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Gửi yêu cầu</button>
    <div class="mt-3">
        <a asp-action="ResetPassword" asp-controller="Users">Mật khẩu mới</a>
    </div>
    <div class="mt-3">
        <a asp-action="Login" asp-controller="Users">Quay lại</a>
    </div>
</form>
