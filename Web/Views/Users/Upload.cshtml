@model List<API.ViewModel.UserRegisterDTO>

@{
    ViewData["Title"] = "Tải lên tệp Excel";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <h2 class="text-primary text-center mb-4">@ViewData["Title"]</h2>

            <!-- Hiển thị thông báo -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <!-- Form upload file Excel -->
            <form asp-action="Upload" method="post" enctype="multipart/form-data" class="mb-4">
                <div class="row align-items-end">
                    <div class="col-md-8">
                        <label class="form-label">Chọn tệp Excel:</label>
                        <input type="file" name="file" class="form-control" accept=".xlsx,.xls" required />
                    </div>
                    <div class="col-md-4 text-md-end mt-3 mt-md-0">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-eye-fill"></i> Xem trước danh sách
                        </button>
                    </div>
                </div>
            </form>

            <hr />

            <!-- Hiển thị bảng duy nhất -->
            <form asp-action="CreateFromPreview" method="post">
                <h4 class="text-success mb-3">📋 Dữ liệu xem trước</h4>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Họ tên</th>
                                <th>Tên đăng nhập</th>
                                <th>Email</th>
                                <th>Mật khẩu</th>
                                <th>SĐT</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th>Địa chỉ</th>
                                <th>Vai trò</th>
                                <th>
                                    ✔ Tạo?
                                    <br />
                                    <input type="checkbox" id="checkAll" />
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input type="text" name="users[@i].FullName" value="@Model[i].FullName" class="form-control" />
                                        </td>
                                        <td>
                                            <input type="text" name="users[@i].UserName" value="@Model[i].UserName" class="form-control" />
                                        </td>
                                        <td>
                                            <input type="email" name="users[@i].Email" value="@Model[i].Email" class="form-control" />
                                        </td>
                                        <td>
                                            <input type="text" name="users[@i].PassWord" value="@Model[i].Password" class="form-control" />
                                        </td>
                                        <td>
                                            <input type="text" name="users[@i].PhoneNumber" value="@Model[i].PhoneNumber" class="form-control" />
                                        </td>
                                        <td>
                                            <input type="date" name="users[@i].Dob" value="@Model[i].Dob?.ToString("yyyy-MM-dd")" class="form-control" />
                                        </td>
                                        <td>
                                            <input type="text" name="users[@i].Gender" value="@(Model[i].Gender?.ToString())" class="form-control" />
                                        </td>
                                        <td>
                                            <input type="text" name="users[@i].Address" value="@Model[i].Address" class="form-control" />
                                        </td>
                                        <td>
                                            <input type="hidden" name="users[@i].RoleIds[0]" value="3" />
                                        </td>
                                        <td>
                                            <input type="checkbox" name="selectedIndexes" value="@i" />
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-muted">Chưa có dữ liệu. Vui lòng tải lên file Excel.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle-fill"></i> Tạo tài khoản
                    </button>

                    <a asp-controller="Student" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const checkAll = document.getElementById("checkAll");
            const checkboxes = document.querySelectorAll("input[type='checkbox'][name='selectedIndexes']");

            checkAll.addEventListener("change", function () {
                checkboxes.forEach(cb => cb.checked = this.checked);
            });
        });
    </script>
}
